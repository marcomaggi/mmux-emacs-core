;;;; helpers

(defun cc--or-most-positive-fixnum (N)
  (if (<= N 0)
      most-positive-fixnum
    N))

(defun cc--or-most-negative-fixnum (N)
  (if (>= N 0)
      most-negative-fixnum
    N))


